# CDN Base URL for assets
# This variable is used to construct URLs for images, GIFs, and SVGs in the application
#
# Local development (recommended):
# Use an empty string to serve assets from the /public directory via Next.js
NEXT_PUBLIC_CDN_BASE_URL=""
#
# Production with CDN:
# Set to your CDN URL for faster global distribution
# NEXT_PUBLIC_CDN_BASE_URL=https://cdn.yourdomain.com
# NEXT_PUBLIC_CDN_BASE_URL=https://your-cdn.vercel.app

# Convex Configuration
# Get these values by running: bunx convex dev
# The deployment name is shown in the Convex dashboard
CONVEX_DEPLOYMENT=
# The public URL for Convex client connection (must start with NEXT_PUBLIC_)
NEXT_PUBLIC_CONVEX_URL=

# Widget Script URL
# URL to the deployed widget script for embedding
WIDGET_SCRIPT_URL=https://widget-deploy-hazel.vercel.app/widget.js
