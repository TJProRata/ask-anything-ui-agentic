      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run /Users/tjmcgovern/.claude/hooks/notification.py --notify"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run /Users/tjmcgovern/.claude/hooks/stop.py --chat"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run /Users/tjmcgovern/.claude/hooks/subagent_stop.py --notify"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
